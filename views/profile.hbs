<h1>Profile</h1>
<div class="row">
	<div class="col s6">
		{{#if user.avatarUrl}}
		<img src="/{{user.avatarUrl}}" alt="">
			{{else}}
			<p>No avatar</p>
		{{/if}}
	</div>
	<div class="col s6">
		<form action="/profile" enctype="multipart/form-data" method="post">
			<p><strong>Email: {{user.email}}</strong></p>
			<div class="input-field">
				<input id="name" type="text" name="name" class="validate" required value="{{user.name}}">
				<label for="name">Your name</label>
				<span class="helper-text" data-error="wrong"></span>
			</div>
			<div class="file-field input-field">
				<div class="btn">
					<span>Avatar</span>
					<input type="file" name="avatar">
				</div>
				<div class="file-path-wrapper">
					<input class="file-path validate" type="text" name="avaurl" placeholder="Upload your avatar">
				</div>
			</div>
			<input type="hidden" name="_csrf" value="{{csrf}}">
			<button type="submit" class="btn">Change</button>
		</form>
	</div>
</div>