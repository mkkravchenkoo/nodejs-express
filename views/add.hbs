<h1>Add</h1>

<form action="/add" method="post">
    <div class="input-field">
        <input id="title" type="text" name="title" class="validate" required>
        <label for="title">Title</label>
        <span class="helper-text" data-error="wrong"></span>

    </div>
    <div class="input-field">
        <input id="price" type="text" name="price" class="validate" required>
        <label for="price">Price</label>
        <span class="helper-text" data-error="wrong"></span>
    </div>
    <div class="input-field">
        <input id="img" type="text" name="img" class="validate" required>
        <label for="img">Url</label>
        <span class="helper-text" data-error="wrong"></span>
    </div>
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary">Send</button>
</form>